<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <TextView android:id="@+id/timeCities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="#000"
            android:gravity="center"/>

        <TextView android:id="@+id/exerciseCities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="#000"
            android:gravity="center"
            android:background="@drawable/question_design"/>

        <TableLayout
            android:layout_width="304dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TableRow>
                <TextView android:id="@+id/tv_c00"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/answer_design"/>
                <TextView android:id="@+id/tv_c01"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/answer_design"/>
            </TableRow>

            <TableRow>
                <TextView android:id="@+id/tv_c10"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/answer_design"/>
                <TextView android:id="@+id/tv_c11"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:textSize="25sp"
                    android:textColor="#000"
                    android:gravity="center"
                    android:layout_margin="1dp"
                    android:background="@drawable/answer_design"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>

