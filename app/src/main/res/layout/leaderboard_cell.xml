<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:contentPadding="10dp"
    app:elevation="15dp"
    app:cardCornerRadius="10dp"
    android:orientation="horizontal"
    app:cardBackgroundColor="#BC95CAF5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="start">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewCardCell"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_gravity="start"/>

        <TextView android:id="@+id/userNameCardCell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:fontFamily="@font/stephia"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/userLevelCardCell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/stephia"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/userScoreTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/score"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:paddingEnd="5dp"
                android:paddingStart="5dp"
                android:fontFamily="@font/stephia"
                android:layout_gravity="center"/>

            <TextView android:id="@+id/userScoreCardCell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/stephia"
                android:layout_gravity="center"/>

        </LinearLayout>
        
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:gravity="center">

            <TextView android:id="@+id/userDateCardCell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/stephia"
                android:layout_gravity="center"/>

            <TextView android:id="@+id/userTimeCardCell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#000"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/stephia"
                android:layout_gravity="center"/>

    </LinearLayout>

</android.support.v7.widget.CardView>