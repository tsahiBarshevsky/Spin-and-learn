<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlayActivity">

    <TextView android:id="@+id/round"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:textColor="#000"
        android:gravity="center"/>

    <ImageView android:id="@+id/base"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/base"/>

    <ImageView android:id="@+id/roulette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rolutte_10"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/radius"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/tringle"/>

    <Button android:id="@+id/spinBtn"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/button_design"
        android:layout_margin="10dp"
        android:text="Spin"
        android:textAllCaps="false"/>

</RelativeLayout>