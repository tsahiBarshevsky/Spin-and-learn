<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="375dp"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <TextView android:id="@+id/timeComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="#000"
            android:gravity="center"/>

        <TextView android:id="@+id/exerciseComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="25sp"
            android:textColor="#000"
            android:gravity="center"
            android:background="@drawable/question_design"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Answer will appear here"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"/>

        <TableLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="150dp"
            android:gravity="center"
            android:layout_gravity="center">

            <TableRow>
                <TextView android:id="@+id/tv00"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv01"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv02"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv03"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv04"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv05"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv06"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv07"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv08"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv09"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </TableRow>

            <TableRow>
                <TextView android:id="@+id/tv10"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv11"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv12"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv13"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv14"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv15"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv16"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv17"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv18"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
                <TextView android:id="@+id/tv19"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>
            </TableRow>

        </TableLayout>

    </LinearLayout>

</RelativeLayout>