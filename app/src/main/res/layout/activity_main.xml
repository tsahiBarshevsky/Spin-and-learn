<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:keepScreenOn="true"

    android:background="@drawable/wallpaper3">

    <ImageView android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"/>

    <TextView android:id="@+id/massage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="20dp"
        android:layout_below="@id/logo"
        android:layout_margin="2dp"
        android:fontFamily="@font/stephia"
        android:enabled="false"/>

    <Button android:id="@+id/easyBtn"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:background="@drawable/button_design"
        android:text="@string/easy"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_below="@id/massage"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/easy_logo"
        android:drawablePadding="-18dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/stephia"
        android:enabled="false"/>

    <Button android:id="@+id/mediumBtn"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:background="@drawable/button_design"
        android:text="@string/medium"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_below="@id/easyBtn"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/medium_logo"
        android:padding="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/stephia"
        android:enabled="false"/>

    <Button android:id="@+id/hardBtn"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:background="@drawable/button_design"
        android:text="@string/hard"
        android:textAllCaps="false"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:layout_below="@id/mediumBtn"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/hard_logo"
        android:drawablePadding="-10dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:fontFamily="@font/stephia"
        android:enabled="false"/>

    <Button android:id="@+id/leaderboardBtn"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/leaderbaord"
        android:textAllCaps="false"
        android:background="@drawable/secondary_button_design"
        android:layout_margin="5dp"
        android:layout_below="@id/hardBtn"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:fontFamily="@font/stephia"
        android:enabled="false"/>

    <Button android:id="@+id/howToPlayBtn"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:gravity="center"
        android:text="@string/how_to_play"
        android:textAllCaps="false"
        android:background="@drawable/secondary_button_design"
        android:layout_margin="5dp"
        android:layout_below="@id/leaderboardBtn"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:fontFamily="@font/stephia"
        android:enabled="false"/>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout android:id="@+id/soundsButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="bottom|right"
            android:layout_toEndOf="@+id/recyclerView">

            <Button android:id="@+id/sound"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_design"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/ic_soundoff"
                android:padding="3dp" />

            <Button android:id="@+id/music"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/button_design"
                android:layout_margin="5dp"
                android:drawableStart="@drawable/ic_musicoff"
                android:padding="3dp"/>

        </LinearLayout>>
    </FrameLayout>

</RelativeLayout>